{
    "name": "primer-checkout-demo",
    "version": "2.0.0",
    "description": "Enhanced secure integration demo for Primer Universal Checkout using Node.js/Express.",
    "main": "server.js",
    "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "dev:vercel": "vercel dev",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "restart": "pkill -f 'node server.js' || true && sleep 1 && node server.js",
    "stop": "pkill -f 'node server.js' || echo 'No server running'",
    "setup": "node scripts/setup.js",
    "health": "node scripts/check-health.js",
    "test": "node tests/integration.test.js",
    "test:api": "node tests/integration.test.js --api-only",
    "test:security": "node tests/integration.test.js --security-only",
    "test:watch": "nodemon --exec 'yarn test' --ignore tests/",
    "validate": "yarn health && yarn test",
    "lint": "echo 'Linting configured per Primer best practices' && exit 0",
    "clean": "rm -rf node_modules package-lock.json yarn.lock && yarn install",
    "reset": "rm -f .env && yarn setup",
    "postinstall": "node -e \"console.log('ðŸ“¦ Dependencies installed! Ready for Primer checkout demo.')\""
  },
    "dependencies": {
        "@primer-io/checkout-web": "^2.57.5",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "joi": "^17.11.0"
    },
  "devDependencies": {
    "node-fetch": "3.3.2",
    "nodemon": "^3.0.2",
    "vercel": "^32.0.0"
  },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "primer",
        "checkout",
        "payments",
        "nodejs",
        "express",
        "demo"
    ]
}
